LXI B,A2C2H

START:	MVI D,04H
	CALL KIND	
	CPI 09H	
	JNC START	
	ADI 00H
	JZ START	
	CPI 05H
	JNC MSB
	MVI E,F0H
	JMP LSB

MSB:	MVI E,0FH

LSB:	CALL PUT
	JMP START

PUT:	MOV A,E
	STA 3000H
	CALL DELAY
	MVI A,FFH
	STA 3000H
	CALL DELAY
	DCR D
	JZ START
	JMP PUT


DELAY: DCX B		
	MOV A,B	
	ORA C		
	JNZ DELAY	
	RET		
END